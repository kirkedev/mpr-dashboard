{
    "name": "test",
    "private": true,
    "scripts": {
        "lib": "jest --projects lib --watchAll",
        "api": "jest --projects api --watchAll",
        "app": "jest --projects app --watchAll",
        "unit": "jest --projects lib",
        "integration": "jest --projects api app",
        "all": "jest --coverage --collectCoverageFrom='{app,api,lib}/**/*.{ts,svelte}'",
        "watch": "jest --watchAll --coverage --collectCoverageFrom='{app,api,lib}/**/*.{ts,svelte}'",
        "server": "node --es-module-specifier-resolution=node --loader ts-node/esm mpr"
    },
    "devDependencies": {
        "@types/command-line-args": "^5.2.0",
        "@types/jest": "^27.4.0",
        "@types/node": "^17.0.13",
        "@types/resolve": "^1.20.1",
        "@types/testing-library__jest-dom": "^5.14.2"
    },
    "dependencies": {
        "@testing-library/jest-dom": "^5.16.1",
        "@testing-library/svelte": "^3.0.3",
        "jest": "^27.4.7",
        "lib": "workspace:*",
        "svelte": "^3.46.3",
        "svelte-jester": "^2.1.5",
        "ts-jest": "^27.1.3",
        "typescript": "^4.5.5"
    },
    "jest": {
        "projects": ["app", "api", "lib"]
    }
}
