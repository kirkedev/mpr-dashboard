{
    "compilerOptions": {
        "target": "ES2021",
        "strict": true,
        "sourceMap": true,
        "declaration": true,
        "declarationMap": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "resolveJsonModule": true,
        "downlevelIteration": true,
        "allowSyntheticDefaultImports": true,
        "allowJs": true,
        "checkJs": true,
        "module": "ESNext",
        "moduleResolution": "node",
        "noEmit": true
    }
}
